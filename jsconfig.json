{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "/~/*": ["src/*"]
    },
    "strict": true,
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "importsNotUsedAsValues": "error",
    "isolatedModules": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "checkJs": true
  },
  "include": ["src/**/*.js", "src/**/*.svelte"],
  "exclude": ["node_modules", "build", "dist"]
}